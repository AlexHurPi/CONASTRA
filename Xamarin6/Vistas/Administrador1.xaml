<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin6.Vistas.Administrador1"
             Title="Administrador (Ingresar)"
             NavigationPage.HasBackButton="False"
             BackgroundColor="AliceBlue">    
    <StackLayout>        
      <StackLayout >
            <StackLayout Orientation="Horizontal"
                         HeightRequest="40">
                <Image Source="Casco.png"
                       Aspect="AspectFit"
                       Margin="20,0,0,0"/>
                <Label Text="CONASTRA"
                       FontSize="Title"
                       FontAttributes="Bold"
                       TextColor="Blue"
                       HorizontalOptions="Start"
                       Margin="20,0,0,0" />
            </StackLayout>                
            <ScrollView >
                <Frame  VerticalOptions="FillAndExpand"
                        Margin="15,0,15,25"
                        CornerRadius="20"
                        BackgroundColor="#EDEAE6">            
            <StackLayout >
                <StackLayout>
                 <Label Text="Datos del Empleado"
                        TextColor="Blue"
                        HorizontalOptions="Center"
                        FontSize="Subtitle"
                        FontAttributes="Bold"/>
                </StackLayout>
                <Grid RowSpacing="3">                           
                    <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="80" />                    
                    </Grid.RowDefinitions>
                    <Label  Text="Nombre:"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Grid.Row="0"
                            Grid.Column="0"                            
                            TextColor="Blue"/>
                    <Entry  Placeholder="Nombre"
                            FontSize="Micro"
                            TextColor="Black"                            
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Apellidos:"
                            TextColor="Blue" />
                    <Entry  Placeholder="Apellidos"
                            FontSize="Micro"
                            TextColor="Black"                            
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="2" IsReadOnly="False"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="Cedula:"
                            TextColor="Blue" />
                    <Entry  FontSize="Micro"
                            TextColor="Black"
                            Placeholder="Cedula"
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="2" 
                            Keyboard="Numeric"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="3"
                            Grid.Column="0"
                            Text="Edad:"
                            TextColor="Blue" />
                    <Entry  FontSize="Micro"
                            TextColor="Black"
                            Placeholder="Edad"
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Keyboard="Numeric"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="4"
                            Grid.Column="0"
                            Text="Empresa:"
                            TextColor="Blue" />
                    <Entry  FontSize="Micro"
                            TextColor="Black"
                            Placeholder="Empresa"
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="4"
                            Grid.Column="1"
                            Grid.ColumnSpan="2" />
                    <Label  VerticalOptions="Center"
                            Grid.Row="5"
                            Grid.Column="0"
                            Text="No Celular:"
                            TextColor="Blue" />
                    <Entry  FontSize="Micro"
                            TextColor="Black"
                            Placeholder="No. Celular"
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="5"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Keyboard="Telephone"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="6"
                            Grid.Column="0"
                            Text="Direccion:"
                            TextColor="Blue" />
                    <Entry  FontSize="Micro"
                            TextColor="Black"
                            Placeholder="Direccion"
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="6"
                            Grid.Column="1"
                            Grid.ColumnSpan="2" />
                    <Label  VerticalOptions="Center"
                            Grid.Row="7"
                            Grid.Column="0"
                            Text="Correo:"
                            TextColor="Blue" />
                    <Entry  Placeholder="Email"
                            FontSize="Micro"
                            TextColor="Black"                                
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="7"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Keyboard="Email"
                            IsReadOnly="True"/>
                    <Label  VerticalOptions="Center"
                            Grid.Row="8"
                            Grid.Column="0"
                            Text="Fecha:"
                            TextColor="Blue"/>
                    <Entry  Placeholder="Fecha"
                            FontSize="Caption"
                            TextColor="Black"                                
                            BackgroundColor="White"
                            PlaceholderColor="#EDEAE6"
                            Grid.Row="8"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"                            
                            IsReadOnly="True"
                            Text="{Binding Creation_Date}"/>
                            
                    <Button Text="Huella"
                            Grid.Row="9"
                            Grid.Column="0"
                            BackgroundColor="Aqua"
                            CornerRadius="10"
                            Margin="0,10,0,0"                            
                            TextColor="Blue"
                            TextTransform="None"
                            Command="{Binding IrAdminstradorHuellaCommand}"/>
                    <Button Text="Foto"
                            Grid.Row="9"
                            Grid.Column="1"
                            BackgroundColor="Aqua"
                            CornerRadius="10"
                            Margin="0,10,0,0"                         
                            TextColor="Blue"
                            TextTransform="None"
                            Command="{Binding IrAdminstradorFotoCommand}"/>
                    <Button Text="Generar QR"
                            FontSize="Caption"
                            Grid.Row="9"
                            Grid.Column="2"
                            BackgroundColor="Aqua"
                            CornerRadius="10"
                            Margin="0,10,0,0"
                            TextColor="Blue"                            
                            Command="{Binding IrAdministradorQRCommand}"
                            TextTransform="None"/>
                    <Button Text="Volver"
                            Grid.Row="10"
                            Grid.Column="1"
                            BackgroundColor="Aqua"
                            CornerRadius="10"
                            Margin="0,10,0,0"
                            TextColor="Blue"                            
                            TextTransform="None"
                            Command="{Binding VolverCommand}"/>
                    <Button Text="Guardar"                            
                            BackgroundColor="Aqua"
                            TextTransform="None"
                            TextColor="Blue"
                            Grid.Row="10"
                            Grid.Column="2"
                            Margin="0,10,0,0"
                            CornerRadius="10"
                            Command="{Binding GuardarCommand}"/>
                    </Grid>
            </StackLayout>
        </Frame>
            </ScrollView>           
            
        </StackLayout>
       
    </StackLayout>
    
</ContentPage>